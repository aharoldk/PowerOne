<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.powerone.powerone.SignatureActivity">

    <com.project.powerone.powerone.view.CanvasView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/clearCanvas"
        android:id="@+id/canvasCanvas"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Clear Canvas"
        android:onClick="clearCanvas"
        android:id="@+id/clearCanvas"/>

    <Button
        android:id="@+id/scrshootCanvas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clearCanvas"
        android:layout_centerHorizontal="true"
        android:text="Screen shot" />
</RelativeLayout>
